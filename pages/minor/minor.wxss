/* pages/minor/minor.wxss */
.boxbooks{
  overflow: hidden;
}
.active{
  color:red;
}
.type{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding:10rpx;
  border-bottom: 1rpx solid #eeeeee;
  color:#333333;
  position: fixed;
  background-color: white;
  z-index: 5;
  width:100%;
}
.type1{
  border-bottom: 1rpx solid #eeeeee;
  color:#333333;
  white-space: nowrap;
  height:50rpx;
  margin-top: 80rpx;
}
.type2{
  display: inline-block;
  margin-right:15rpx;
  padding-left:20rpx;
}
.books {
  padding: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
}
.seeing{
  width: 100%;
  height:300rpx;
  padding-left:20rpx;
  position: relative;
}
.title {
  font-weight: 600;
  margin-bottom: 10rpx;
  color:#333333;
}

.author {
  font-size: 28rpx;
  color: #aaaaaa;
  margin-bottom: 10rpx;
}
.shortIntro {
  font-size: 28rpx;
  color: #aaaaaa;
  height: 90rpx;
  line-height: 30rpx; 
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}

.mins {
  font-size: 28rpx;
  color: #f9f9f9;
  position: absolute;
  bottom:0;
  display: flex;
}
.tags1{
  background-color: orange;
  padding:5rpx 10rpx;
  border-radius: 5rpx;
}
.tags2{
  background-color: skyblue;
  padding:5rpx 10rpx;
  border-radius: 5rpx;
  margin:0 5rpx;
}
.tags3{
  background-color: orangered;
  padding:5rpx 10rpx;
  border-radius: 5rpx;
}