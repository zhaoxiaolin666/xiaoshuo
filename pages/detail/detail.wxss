/* pages/detail/detail.wxss */
.boxdetail {
  position: relative;
}

.photo {
  position: absolute;
  top: 0;
  left: 50%;
  margin-left: -125rpx;
  margin-bottom: 250rpx;
}

.title {
  margin-top: 260rpx;
  text-align: center;
  font-weight: 600;
  color: #333333;
}

.author {
  text-align: center;
  font-size: 30rpx;
  color: #aaaaaa;
  padding-bottom: 100rpx;
}

.cont {
  background-color: #f2f2f2;
}

.nav {
  display: flex;
  justify-content: space-around;
}

.nav1 {
  background-color: #EC304C;
  color: #f7f7f7;
  font-weight: 400;
  border-radius: 100rpx;
  width: 150rpx;
  padding: 20rpx 50rpx;
  position: absolute;
  top: 550rpx;
  margin-left: -150rpx;
}

.nav2 {
  background-color: #fff;
  color: #aaaaaa;
  font-weight: 400;
  border-radius: 100rpx;
  border: 1rpx solid #eee;
  width: 150rpx;
  padding: 20rpx 50rpx;
  position: absolute;
  top: 550rpx;
  margin-left: 150rpx;
}
.nav3 {
  background-color: #eeeeee;
  color: #999999;
  font-weight: 400;
  border-radius: 100rpx;
  border: 1rpx solid #eee;
  width: 180rpx;
  padding: 20rpx 50rpx;
  position: absolute;
  top: 550rpx;
  margin-left: 150rpx;
}

.lastChapte {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}

.lastChapte1 {
  font-size: 30rpx;
}

.lastChapte2 {
  font-size: 30rpx;
  color: skyblue;
  padding-bottom: 10rpx;
  text-align: center;
}

.star {
  display: flex;
  justify-content: center;
  padding-top: 50rpx;
}

.detailnav {
  display: flex;
  justify-content: space-around;
}

.bookcity {
  display: flex;
  justify-content: space-around;
  padding: 4rpx 0;
  border-bottom: 1rpx solid #eeeeee;
}

.bookcity1,
.bookcity2 {
  text-align: center;
  padding: 15rpx 5rpx;
}

.active {
  border-bottom: 5rpx solid red;
  color: red;
}

.catalog {
  display: flex;
  justify-content: center;
  background: #f7f7f7;
  margin: 0 50rpx;
  padding: 10rpx 0;
  border-radius: 20rpx;
  color: #999999;
}

.booksphoto {
  width: 100%;
  height: 300rpx;
}
.head{
  width:100rpx;
  height:100rpx;
  border-radius: 50%;
  
}